generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model Evento {
  id         Int      @id @default(autoincrement())
  email   String   
  fecha     DateTime 
  hora      String
  lugar    String
  soporte Boolean @default(false)
  organizador String
  descripcion String
  codigo String
  created_at  DateTime @default(now())
}


model Usuario {
  id         Int      @id @default(autoincrement())
  nombre     String
  correo      String   @unique
  password String
  rol Rol
  created_at  DateTime @default(now())
}


enum Rol {
  ADMIN
  USER
  SOPORTE
}

